                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="一次供暖：23℃"
                    android:drawableRight="@drawable/icon_arrow"
                    android:gravity="center_vertical"
                    android:paddingRight="16dp"
                    android:drawablePadding="10dp"
                    android:paddingLeft="12dp"
                    android:textSize="15sp"
                    android:textColor="@color/color_646464"/>
                <TextView
                    android:id="@+id/tv_electricity"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="二次供暖：23℃"
                    android:drawableRight="@drawable/icon_arrow"
                    android:gravity="center_vertical"
                    android:paddingRight="15dp"
                    android:textSize="15sp"
                    android:textColor="@color/color_646464"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal" android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="51dp"
                android:background="@color/white">
                <TextView
                    android:id="@+id/tv_one_regulating"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="一次供暖：23℃"
                    android:drawableRight="@drawable/icon_arrow"
                    android:gravity="center_vertical"
                    android:paddingRight="16dp"
                    android:drawablePadding="10dp"
                    android:paddingLeft="12dp"
                    android:textSize="15sp"
                    android:textColor="@color/color_646464"/>
                <TextView
                    android:id="@+id/tv_two_regulating"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="二次供暖：23℃"
                    android:drawableRight="@drawable/icon_arrow"
                    android:gravity="center_vertical"
                    android:paddingRight="15dp"
                    android:textSize="15sp"
                    android:textColor="@color/color_646464"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal" android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="51dp">
                <TextView
                    android:id="@+id/tv_one_circulating_pump"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="一次供暖：23℃"
                    android:drawableRight="@drawable/icon_arrow"
                    android:gravity="center_vertical"
                    android:paddingRight="16dp"
                    android:drawablePadding="10dp"
                    android:paddingLeft="12dp"
                    android:textSize="15sp"
                    android:textColor="@color/color_646464"/>
                <TextView
                    android:id="@+id/tv_two_circulating_pump"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="二次供暖：23℃"
                    android:drawableRight="@drawable/icon_arrow"
                    android:gravity="center_vertical"
                    android:paddingRight="15dp"
                    android:textSize="15sp"
                    android:textColor="@color/color_646464"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal" android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="51dp"
                android:background="@color/white">
                <TextView
                    android:id="@+id/tv_one_water_pump"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="一次供暖：23℃"
                    android:drawableRight="@drawable/icon_arrow"
                    android:gravity="center_vertical"
                    android:paddingRight="16dp"
                    android:drawablePadding="10dp"
                    android:paddingLeft="12dp"
                    android:textSize="15sp"
                    android:textColor="@color/color_646464"/>
                <TextView
                    android:id="@+id/tv_two_water_pump"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="二次供暖：23℃"
                    android:drawableRight="@drawable/icon_arrow"
                    android:gravity="center_vertical"
                    android:paddingRight="15dp"
                    android:textSize="15sp"
                    android:textColor="@color/color_646464"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal" android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="51dp">
                <TextView
                    android:id="@+id/tv_drain_solenoid"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="泄水电磁阀：打开"
                    android:drawableRight="@drawable/icon_arrow"
                    android:gravity="center_vertical"
                    android:paddingRight="16dp"
                    android:drawablePadding="10dp"
                    android:paddingLeft="12dp"
                    android:textSize="15sp"
                    android:textColor="@color/color_646464"/>
                <TextView
                    android:id="@+id/tv_undrain_solenoid"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="补水电磁阀：关闭"
                    android:drawableRight="@drawable/icon_arrow"
                    android:gravity="center_vertical"
                    android:paddingRight="15dp"
                    android:textSize="15sp"
                    android:textColor="@color/color_646464"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>