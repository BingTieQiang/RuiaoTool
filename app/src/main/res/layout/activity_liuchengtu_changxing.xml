<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ruiao.tools.the.YichangyiceActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#C2E2FF"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_top"
            android:background="@color/chart_bg_1" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/chart_bg">

            <TextView
                android:id="@+id/tv_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="一厂一策"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_change_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="11dp"
                android:text=""
                android:textColor="@color/white"
                android:textSize="16sp" />
        </RelativeLayout>
        <!--<WebView-->
        <!--android:id="@+id/webView"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent">-->

        <!--</WebView>-->

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/tablebg1">

                    <TextView
                        android:layout_marginBottom="5dp"
                        android:id="@+id/tv_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="生产工艺"
                        android:textColor="@color/primary_text"
                        android:textSize="18sp" />

                    <ImageView
                        android:id="@+id/img_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_1"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/liuchengtu1" />

                    <TextView
                        android:textSize="13sp"
                        android:textColor="@color/primary_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/img_2"
                        android:text="Φ6.5盘条首先经大拔至8#丝,再经中拔至14#丝并退火,最后经细拔至20#、22#丝,退火自然冷却后即为成品,退火采用电退火炉供热。" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_margin="10dp"
                    android:background="@drawable/tablebg1"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_5"
                        android:layout_marginBottom="5dp"
                        android:textColor="@color/primary_text"
                        android:textSize="18sp"
                        android:layout_centerHorizontal="true"
                        android:text="重污染天气一厂一策"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <LinearLayout
                        android:id="@+id/ll_7"
                        android:layout_below="@id/tv_5"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView

                            android:textSize="13sp"
                            android:textColor="@color/red"
                            android:textStyle="bold"
                            android:text="重污染天气 I 级预警响应措施:"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:textSize="13sp"
                            android:layout_marginLeft="20dp"
                            android:textColor="@color/primary_text"
                            android:text="管控环节:全厂生产线 "
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:textSize="13sp"
                            android:layout_marginLeft="20dp"
                            android:textColor="@color/primary_text"
                            android:text="设备:1条拔丝生产线、拉丝、燃气退火炉、电退火炉"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:textSize="13sp"
                            android:layout_marginLeft="20dp"
                            android:textColor="@color/primary_text"
                            android:text="应急措施:停产"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_below="@id/ll_7"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textSize="13sp"
                            android:textColor="#FF6633"
                            android:textStyle="bold"
                            android:text="重污染天气 II 级预警响应措施:"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:textSize="13sp"
                            android:layout_marginLeft="20dp"
                            android:textColor="@color/primary_text"
                            android:text="管控环节:退火炉"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:textSize="13sp"
                            android:layout_marginLeft="20dp"
                            android:textColor="@color/primary_text"
                            android:text="设备:天然气退火炉"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:textSize="13sp"
                            android:layout_marginLeft="20dp"
                            android:textColor="@color/primary_text"
                            android:text="应急措施:停止使用"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/tablebg1">
                    <TextView
                        android:layout_marginBottom="5dp"
                        android:textColor="@color/primary_text"
                        android:textSize="18sp"
                        android:id="@+id/tv_3"
                        android:layout_centerHorizontal="true"
                        android:text="工艺设施状态判定"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <LinearLayout
                        android:id="@+id/ll_2"
                        android:layout_below="@id/tv_3"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textSize="13sp"
                            android:textColor="@color/primary_text"
                            android:textStyle="bold"
                            android:text="生产状态判定:"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:textSize="13sp"
                            android:textColor="@color/primary_text"
                            android:id="@+id/tv_4"
                            android:text="生产状态判定:当生产设备运行时，则认为该产线在生产。"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_3"
                        android:layout_below="@id/ll_2"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textSize="13sp"
                            android:textColor="@color/primary_text"
                            android:textStyle="bold"
                            android:text="治理状态判定:"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:textSize="13sp"
                            android:textColor="@color/primary_text"
                            android:text="1、当生产设备运行时，如该生产设备对应的治理设备未开启， 则判定该产线治理状态异常\n2、对于常开治理设备，在非报备停产状态下必须开启，否则判 定该产线治理状态异常"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_below="@id/ll_3"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textSize="13sp"
                            android:textColor="@color/primary_text"
                            android:textStyle="bold"
                            android:text="常开治理设备:"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:textSize="13sp"
                            android:textColor="@color/primary_text"
                            android:text="无"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </RelativeLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
