<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_100"
    tools:context="com.ruiao.tools.ic_card2.IcHistroyActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/chart_bg">
                <TextView
                    android:id="@+id/tv_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="历史数据"
                    android:textColor="@color/white"
                    android:textSize="18sp" />
            </RelativeLayout>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:padding="10dp"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RadioGroup
                    android:id="@+id/radiogroup_time_type"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >
                    <RadioButton
                        android:padding="5dp"
                        android:id="@+id/btn_0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="分钟数据"
                        android:textSize="12sp"
                        android:textColor="@android:color/black"
                        android:gravity="center"
                        android:button="@null"
                        android:background="@drawable/radio"
                        />
                    <RadioButton
                        android:checked="true"
                        android:padding="5dp"
                        android:layout_marginLeft="1dp"
                        android:id="@+id/btn_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="小时数据"
                        android:textSize="12sp"
                        android:textColor="@android:color/black"
                        android:gravity="center"
                        android:button="@null"
                        android:background="@drawable/radio"
                        />
                    <RadioButton
                        android:padding="5dp"
                        android:layout_marginLeft="1dp"
                        android:id="@+id/btn_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="日数据"
                        android:textSize="12sp"
                        android:textColor="@android:color/black"
                        android:gravity="center"
                        android:button="@null"
                        android:background="@drawable/radio"
                        />
                </RadioGroup>
                <ImageView
                    android:id="@+id/tim_back"
                    android:padding="5dp"
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/imgk12"
                    android:layout_width="25dp"
                    android:layout_height="25dp" />
                <TextView
                    android:id="@+id/time_current"
                    android:layout_marginLeft="10dp"
                    android:textSize="12sp"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/time_go"
                    android:padding="5dp"
                    android:layout_marginLeft="5dp"
                    android:src="@mipmap/imgk13"
                    android:layout_width="25dp"
                    android:layout_height="25dp" />

            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginTop="4dp"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <me.gujun.android.taggroup.TagGroup
                    app:atg_isAppendMode="true"
                    android:id="@+id/tag_group"
                    style="@style/TagGroup" />
            </LinearLayout>

            <com.github.mikephil.charting.charts.LineChart
                android:layout_marginTop="5dp"
                android:id="@+id/lineChart"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_centerInParent="true"/>
            <LinearLayout
                android:onClick="xiehuan"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:gravity="center_vertical"
                    android:drawableRight="@mipmap/chakangengduo"
                    android:padding="1dp"
                    android:textSize="15sp"
                    android:text="数据详细-点击切换数据"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </LinearLayout>

            <LinearLayout
                android:paddingLeft="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:background="@drawable/gb_wo"
                    android:gravity="center"
                    android:textSize="9sp"
                    android:text="序号"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:background="@drawable/gb_wo"
                    android:gravity="center"
                    android:textSize="9sp"
                    android:text="时间"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_1"
                    android:background="@drawable/gb_wo"
                    android:gravity="center"
                    android:textSize="9sp"
                    android:text="COD(mg/L)"
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_2"
                    android:background="@drawable/gb_wo"
                    android:gravity="center"
                    android:textSize="9sp"
                    android:text="COD排放量(kg)"
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_3"
                    android:background="@drawable/gb_wo"
                    android:gravity="center"
                    android:textSize="9sp"
                    android:text="NH₃N(mg/L)"
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_4"
                    android:background="@drawable/gb_wo"
                    android:gravity="center"
                    android:textSize="9sp"
                    android:text="NH₃N排放量(kg)"
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_5"
                    android:background="@drawable/gb_wo"
                    android:gravity="center"
                    android:textSize="9sp"
                    android:text="排水量(m3)"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:descendantFocusability="blocksDescendants">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerview"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
