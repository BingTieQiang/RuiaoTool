<?xml version="1.0" encoding="utf-8"?>
<com.scwang.smartrefresh.layout.SmartRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    app:srlEnablePureScrollMode="true"
    app:srlEnableLoadmore="false"
    app:srlDragRate="0.2"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:background="@color/ggv">
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_E75B5B"
        android:paddingTop="@dimen/padding_top">
        <ImageView
            android:id="@+id/img_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="19dp"
            android:layout_marginRight="11dp"
            android:background="@drawable/icon_white_empty_message"/>
        <com.ruiao.tools.widget.CircleImageView
            android:id="@+id/img_head"
            android:layout_width="87dp"
            android:layout_height="87dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="27dp"
            android:src="@drawable/head_profile"
            app:border_color="#a2ffffff"
            app:border_width="2dp" />

        <TextView
            android:id="@+id/tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_head"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:paddingBottom="16dp"
            android:text=""
            android:textColor="@color/white"
            android:textSize="17sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white">
        <ImageView
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:src="@drawable/icon_company"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/imageView0" />

        <TextView
            android:id="@+id/address"
            android:layout_marginStart="11dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv_company_name"
            android:layout_toEndOf="@+id/imageView0"
            android:drawablePadding="11dp"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="@dimen/page_margin"
            android:text="地址"
            android:textColor="@color/color_646464"
            android:textSize="16sp" />

        <TextView
            android:paddingLeft="10dp"
            android:id="@+id/tv_company_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="12dp"
            android:singleLine="true"
            android:textColor="@color/color_646464"
            android:textSize="15sp" />
    </RelativeLayout>

    <View style="@style/divider_line"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white">
        <ImageView
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/img_1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/imageView2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_branch_company_name"
            android:layout_alignBottom="@+id/tv_branch_company_name"
            android:layout_marginStart="11dp"
            android:layout_toEndOf="@+id/imageView2"
            android:drawablePadding="11dp"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="@dimen/page_margin"
            android:text="部门"
            android:textColor="@color/color_646464"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_branch_company_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="12dp"
            android:singleLine="true"
            android:textColor="@color/color_646464"
            android:textSize="15sp" />
    </RelativeLayout>
      <View style="@style/divider_line" />

      <RelativeLayout
          android:id="@+id/rr_city"
          android:layout_marginTop="20dp"
          android:layout_width="match_parent"
          android:layout_height="50dp"
          android:background="@color/white">
          <ImageView
              android:layout_centerVertical="true"
              android:layout_alignParentLeft="true"
              android:layout_marginLeft="20dp"
              android:src="@mipmap/img_2"
              android:layout_width="40dp"
              android:layout_height="40dp"
              android:id="@+id/imageView3" />

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginStart="11dp"
              android:layout_alignBaseline="@+id/textView6"
              android:layout_alignBottom="@+id/textView6"
              android:layout_toEndOf="@+id/imageView3"
              android:drawablePadding="11dp"
              android:gravity="center_vertical"
              android:paddingLeft="15dp"
              android:paddingRight="@dimen/page_margin"
              android:text="城市管理"
              android:textColor="@color/color_646464"
              android:textSize="16sp" />

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentRight="true"
              android:layout_centerVertical="true"
              android:layout_marginLeft="100dp"
              android:layout_marginRight="12dp"
              android:singleLine="true"
              android:textColor="@color/color_646464"
              android:textSize="15sp"
              android:id="@+id/textView6" />
      </RelativeLayout>
      <View style="@style/divider_line"
          android:layout_marginLeft="20dp"
          android:layout_marginRight="20dp"
          />
      <RelativeLayout
          android:id="@+id/rr_newversion"
          android:layout_width="match_parent"
          android:layout_height="50dp"
          android:background="@color/white">
          <ImageView
              android:layout_centerVertical="true"
              android:layout_alignParentLeft="true"
              android:layout_marginLeft="20dp"
              android:src="@mipmap/img_3"
              android:layout_width="40dp"
              android:layout_height="40dp"
              android:id="@+id/imageView4" />

          <TextView
              android:layout_marginStart="11dp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignBaseline="@+id/textView7"
              android:layout_alignBottom="@+id/textView7"
              android:layout_toEndOf="@+id/imageView4"
              android:drawablePadding="11dp"
              android:gravity="center_vertical"
              android:paddingLeft="15dp"
              android:text="检查更新"
              android:textColor="@color/color_646464"
              android:textSize="16sp" />

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentRight="true"
              android:layout_centerVertical="true"
              android:layout_marginLeft="100dp"
              android:layout_marginRight="12dp"
              android:singleLine="true"
              android:textColor="@color/color_646464"
              android:textSize="15sp"
              android:id="@+id/textView7" />
      </RelativeLayout>
      <View style="@style/divider_line"
          android:layout_marginLeft="20dp"
          android:layout_marginRight="20dp"
          />
      <RelativeLayout
          android:id="@+id/rr_about"
          android:layout_width="match_parent"
          android:layout_height="50dp"
          android:background="@color/white">
          <ImageView
              android:layout_centerVertical="true"
              android:layout_alignParentLeft="true"
              android:layout_marginLeft="20dp"
              android:src="@mipmap/img_4"
              android:layout_width="40dp"
              android:layout_height="40dp"
              android:id="@+id/imageView5" />

          <TextView
              android:layout_marginStart="11dp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignTop="@+id/textView8"
              android:layout_toEndOf="@+id/imageView5"
              android:drawablePadding="11dp"
              android:gravity="center_vertical"
              android:paddingLeft="15dp"
              android:paddingRight="@dimen/page_margin"
              android:text="关于软件"
              android:textColor="@color/color_646464"
              android:textSize="16sp" />

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentRight="true"
              android:layout_centerVertical="true"
              android:layout_marginLeft="100dp"
              android:layout_marginRight="12dp"
              android:singleLine="true"
              android:textColor="@color/color_646464"
              android:textSize="15sp"
              android:id="@+id/textView8" />
      </RelativeLayout>
      <View style="@style/divider_line" />


      <RelativeLayout
          android:id="@+id/rr_clear"
          android:layout_marginTop="20dp"
          android:layout_width="match_parent"
          android:layout_height="50dp"
          android:background="@color/white">
          <ImageView
              android:layout_centerVertical="true"
              android:layout_alignParentLeft="true"
              android:layout_marginLeft="20dp"
              android:src="@mipmap/img_5"
              android:layout_width="40dp"
              android:layout_height="40dp"
              android:id="@+id/imageView6" />

          <TextView
              android:layout_marginStart="11dp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignTop="@+id/tv_clear"
              android:layout_toEndOf="@+id/imageView6"
              android:drawablePadding="11dp"
              android:gravity="center_vertical"
              android:paddingLeft="15dp"
              android:paddingRight="@dimen/page_margin"
              android:text="清除缓存"
              android:textColor="@color/color_646464"
              android:textSize="16sp" />

          <TextView
              android:id="@+id/tv_clear"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentRight="true"
              android:layout_centerVertical="true"
              android:layout_marginLeft="100dp"
              android:layout_marginRight="12dp"
              android:singleLine="true"
              android:textColor="@color/color_646464"
              android:textSize="15sp" />
      </RelativeLayout>
      <View style="@style/divider_line"
          android:layout_marginLeft="20dp"
          android:layout_marginRight="20dp"
          />
      <RelativeLayout
          android:id="@+id/rr_logout"
          android:layout_width="match_parent"
          android:layout_height="50dp"
          android:background="@color/white">
          <ImageView
              android:layout_centerVertical="true"
              android:layout_alignParentLeft="true"
              android:layout_marginLeft="20dp"
              android:src="@mipmap/img_6"
              android:layout_width="40dp"
              android:layout_height="40dp"
              android:id="@+id/imageView7" />

          <TextView
              android:layout_marginStart="11dp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignBottom="@+id/imageView7"
              android:layout_toEndOf="@+id/imageView7"
              android:drawablePadding="11dp"
              android:gravity="center_vertical"
              android:paddingLeft="15dp"
              android:paddingRight="@dimen/page_margin"
              android:text="注销"
              android:textColor="@color/color_646464"
              android:textSize="16sp" />

          <TextView
              android:id="@+id/logout"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentRight="true"
              android:layout_centerVertical="true"
              android:layout_marginLeft="100dp"
              android:layout_marginRight="12dp"
              android:singleLine="true"
              android:textColor="@color/color_646464"
              android:textSize="15sp" />
      </RelativeLayout>
      <View style="@style/divider_line" />


</LinearLayout>
    </ScrollView>
</com.scwang.smartrefresh.layout.SmartRefreshLayout>
